<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_image">

    <LinearLayout
        android:id="@+id/form_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOB-HUB SOCIETY"
            android:fontFamily="@font/sweetpurple"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_putih"
            android:layout_marginStart="170dp"
            />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="185dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/popup"
            android:layout_width="340dp"
            android:layout_marginTop="0dp"
            android:layout_height="320dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/rounded"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="130dp"
                android:fontFamily="@font/roboto_bold"
                />
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email2"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:hint="Your Email Here!"
                android:foreground="?android:attr/selectableItemBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password2"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="197dp"
                android:layout_marginLeft="10dp"
                >
                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="10dp"
                    android:hint="*******"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="280dp"
                style="@style/blueButton"
                android:text="@string/logijn2"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_not_have_an_account"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/register"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textSize="22sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center"
            android:textColor="@color/login_button3"
            />
    </LinearLayout>
</ScrollView>