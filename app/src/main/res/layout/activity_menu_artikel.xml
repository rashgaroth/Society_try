<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.artikel.MenuArtikel">

    <TextView
        android:id="@+id/iduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dwiyan"
        />

    <TextView
        android:id="@+id/nama_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi DWIYAN"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LET'S CREATE YOUR IDEA!"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30dp"
        android:layout_gravity="center"
        />
    <View
        android:layout_width="190dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/black_feel"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us that your idea will going to change the world!"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Your Title"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext_description"
        android:maxLength="60"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:lines="100"
        android:scrollbars="vertical"
        android:gravity="top|left"
        android:minLines="2"
        android:maxLines="200"
        android:layout_marginTop="10dp"
        android:hint="Your Description"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext_description"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/uploads"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_image_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <ImageView
            android:id="@+id/imageuplaoded"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_compose"
            android:background="@drawable/rounded"
            android:layout_marginLeft="200sp"
            android:visibility="gone"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="10dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        tools:visibility="visible"
        />
</LinearLayout>