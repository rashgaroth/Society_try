<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/list_h"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <GridLayout
        android:layout_width="138dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/img_h"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@android:color/darker_gray" />
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <TextView
        android:id="@+id/judul_komunitas_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:text="Nama Komunitas"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/alamat_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:text="Alamat Komunitas"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/id_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="90dp"
        android:text="5"
        android:textSize="20dp" />
    <View
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_below="@+id/linear"
        android:layout_marginTop="180dp"
        android:background="@color/black_feel"
        android:visibility="visible" />
    <com.like.LikeButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="170dp"
        android:padding="10dp"
        android:id="@+id/like"
        app:icon_type="heart"
        app:icon_size="10dp"
        app:anim_scale_factor="2"
        app:liked="false"
        />
    <com.like.LikeButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="230dp"
        android:padding="10dp"
        android:id="@+id/star"
        app:icon_type="Star"
        app:icon_size="10dp"
        app:anim_scale_factor="2"
        app:liked="false"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:id="@+id/rating_hobbies"
        style="@style/SmallRatingBar"
        android:layout_marginTop="140dp" />
</RelativeLayout>