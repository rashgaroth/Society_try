<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="10dp"
        android:id="@+id/linear_bar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/back_button"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/society"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_toStartOf="@+id/foto_profil"
                android:layout_toEndOf="@+id/user_name"
                android:fontFamily="@font/sweetpurple"
                android:text="SOCIETY"
                android:textColor="@color/black_feel"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/iid"
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="40dp"
                android:layout_toStartOf="@+id/foto_profil"
                android:layout_toEndOf="@+id/user_name"
                android:fontFamily="@font/sweetpurple"
                android:text="1"
                android:textColor="@color/black_feel"
                android:visibility="gone"
                android:textSize="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profil"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/bell"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentRight="true"
                android:contextClickable="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/info_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOUNT INFORMATION"
            android:background="@color/white"
            />
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:textColor="@color/logout_button"
            />

    </FrameLayout>

</RelativeLayout>
